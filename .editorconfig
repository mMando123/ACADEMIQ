# EditorConfig - prevent auto-formatting Django templates
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Do NOT auto-format Django HTML templates
[templates/*.html]
indent_style = space
indent_size = 4
max_line_length = off
trim_trailing_whitespace = false
